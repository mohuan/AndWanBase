<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottombar_height"
        android:background="@color/orangec74"
        android:layout_alignParentBottom="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@android:color/transparent"
        >
        <com.weidingqiang.wanbase.widget.bottombar.BottomBarItem
            android:id="@+id/bottom_bar_capital"
            android:layout_width="0dp"
            android:layout_height="@dimen/bottombar_height"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            app:icon_Normal="@drawable/icon_bar_capital_normal"
            app:icon_Selected="@drawable/icon_bar_capital_selected"
            app:icon_Text="你好"
            />


        <com.weidingqiang.wanbase.widget.bottombar.BottomBarItem
            android:id="@+id/bottom_bar_news"
            android:layout_width="0dp"
            android:layout_height="@dimen/bottombar_height"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            app:icon_Normal="@drawable/icon_bar_news_normal"
            app:icon_Selected="@drawable/icon_bar_news_selected"
            app:icon_Text="世界"
            />


        <com.weidingqiang.wanbase.widget.bottombar.BottomBarItem
            android:id="@+id/bottom_bar_im"
            android:layout_width="0dp"
            android:layout_height="@dimen/bottombar_height"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            app:icon_Normal="@drawable/icon_bar_im_normal"
            app:icon_Selected="@drawable/icon_bar_im_selected"
            app:icon_Text="中国"
            />


        <com.weidingqiang.wanbase.widget.bottombar.BottomBarItem
            android:id="@+id/bottom_bar_mine"
            android:layout_width="0dp"
            android:layout_height="@dimen/bottombar_height"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            app:icon_Normal="@drawable/icon_bar_mine_normal"
            app:icon_Selected="@drawable/icon_bar_mine_selected"
            app:icon_Text="天津"
            />

    </LinearLayout>




</RelativeLayout>