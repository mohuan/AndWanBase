<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.down.activity.FileListActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <!--
        https://www.jianshu.com/p/17ec9bd6ca8a
       1.官方不推荐在ConstraintLayout中使用match_parent，可以设置 0dp
       2. app:layout_constraintLeft_toRightOf="@+id/TextView1"这个属性，他的意思是把TextView2的左边约束到TextView1的右边
    -->
    <com.weidingqiang.wanbase.widget.actionbar.XBaseTopBar
        android:id="@+id/base_topbar"
        android:layout_width="0dp"
        android:layout_height="@dimen/bar_height"
        app:isShowLeft_x="false"
        app:isShowRight_x="false"
        app:middleText_x="分类名称"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintTop_toBottomOf="@id/base_topbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</android.support.constraint.ConstraintLayout>