<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40px"
        android:text="提示"
        style="@style/textSize_black029_44"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70px"
        android:text="确认要退出登录吗？"
        style="@style/textSize_black029_44"
        />


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="70px"
        android:layout_marginTop="70px"
        android:orientation="horizontal">

        <Button
            android:textSize="@dimen/textsize_40"
            android:id="@+id/dialog_logout_btn_cancel"
            android:layout_width="310px"
            android:layout_height="90px"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_gradient_gray_corner"
            android:text="取消"
            android:textColor="@android:color/white" />

        <Button
            android:textSize="@dimen/textsize_40"
            android:id="@+id/dialog_logout_btn_confirm"
            android:layout_width="310px"
            android:layout_height="90px"
            android:layout_marginLeft="50px"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_gradient_yellow_corner"
            android:text="确认"
            android:textColor="@android:color/white" />

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>