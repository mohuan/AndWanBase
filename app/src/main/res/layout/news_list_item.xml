<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="28px"
    android:layout_marginRight="28px"
    android:layout_marginTop="20px"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white4ed"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp"
        >
        <!--android:background="@color/white4ed"-->
        <!--app:cardBackgroundColor="@color/white4ed"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_marginTop="28px"
                android:layout_marginLeft="38px"
                android:layout_marginRight="38px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/news_title_tv"
                style="@style/textSize_black029_48"
                android:text="日本部分乡村房产“免费出售"
                />

            <TextView
                android:id="@+id/news_contain_tv"
                style="@style/textSize_graya8f_40"
                android:layout_marginTop="28px"
                android:layout_marginBottom="28px"
                android:layout_marginLeft="38px"
                android:layout_marginRight="38px"
                android:maxLines="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="人口萎缩老龄化加重,日本多处空置房产免费出售日本房产现状数据灰色曲线显率显示率房屋空置率"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>